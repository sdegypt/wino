              تغيير كلمة المرور
            </a>
            <% if (typeof locals !== 'undefined' && locals.isAdmin) { %>
              <a href="/admin/dashboard">
                <i class="fas fa-user-shield"></i>
                لوحة الإدارة
              </a>
            <% } %>
            <button onclick="logout()">
              <i class="fas fa-sign-out-alt"></i>
              تسجيل الخروج
            </button>
          </div>
        </div>
        <a href="/stores" class="mobile-nav-icon" aria-label="المتاجر">
          <i class="fas fa-store"></i>
        </a>
        <a href="/notifications" class="mobile-nav-icon" aria-label="الإشعارات">
          <i class="fas fa-bell"></i>
          <% if (typeof locals !== 'undefined' && locals.unreadCount > 0) { %>
            <span class="mobile-notification-count"><%= locals.unreadCount %></span>
          <% } %>
        </a>
      <% } %>
    </div>

    <div class="logo-container">
      <a href="/">
        <img src="/favicon/logo.png" alt="DIY" loading="lazy" />
      </a>
    </div>
  </header>

  <script>
    function logout() {
      if (confirm('هل أنت متأكد من تسجيل الخروج؟')) {
        fetch('/logout', {
          method: 'POST',
          credentials: 'include'
        })
        .then(response => {
          if (response.ok) {
            if (window.socket) window.socket.disconnect();
            window.location.href = '/login';
          } else {
            throw new Error('فشل تسجيل الخروج');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert("حدث خطأ أثناء تسجيل الخروج");
        });
      }
    }
  </script>
