<body>
  <div class="container">
    <div class="header">
      <h1><i class="fas fa-edit"></i> تعديل المنشور</h1>
      <p>قم بتحديث محتوى منشورك والصور المرفقة</p>
    </div>

    <div class="form-container">
      <form id="editPostForm" action="/forum/post/<%= post.id %>/edit" method="POST" enctype="multipart/form-data">
        
        <div class="form-group">
          <label for="content">
            <i class="fas fa-pen"></i>
            محتوى المنشور
          </label>
          <textarea 
            name="content" 
            id="content" 
            class="form-control" 
            placeholder="اكتب محتوى منشورك هنا..."
            required
          ><%= post.content %></textarea>
        </div>

        <% for (let i = 1; i <= 4; i++) { %>
          <div class="form-group">
            <label for="postImages<%= i %>">
              <i class="fas fa-image"></i>
              الصورة <%= i %>
            </label>
            
            <div class="file-input-wrapper">
              <input 
                type="file" 
                name="postImages" 
                id="postImages<%= i %>" 
                class="file-input"
                accept="image/*"
                onchange="previewImage(this, <%= i %>)"
              />
              <label for="postImages<%= i %>" class="file-input-label">
                <i class="fas fa-cloud-upload-alt"></i>
                اختر صورة أو اسحبها هنا
              </label>
            </div>

            <div class="image-preview" id="preview<%= i %>">
              <% if (post['image' + i]) { %>
                <div class="image-item">
                  <img src="<%= getCloudinaryImageUrl(post['image' + i], '/uploads/images/pngwing.com.png') %>" alt="الصورة <%= i %>" />
                  <button type="button" class="remove-btn" onclick="removeExistingImage(<%= i %>)">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>

        <div class="btn-group">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            <span class="btn-text">تحديث المنشور</span>
            <div class="loading-spinner"></div>
          </button>
          
          <a href="/forum" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i>
            العودة للمنتدى
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    <% function getCloudinaryImageUrl(image, fallback) { return image && image.startsWith('http') ? image : (image ? '/uploads/images/' + image : (fallback || '/uploads/images/pngwing.com.png')); } %>

    // Preview uploaded images
    function previewImage(input, imageNumber) {
      const preview = document.getElementById(`preview${imageNumber}`);
      
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
          preview.innerHTML = `
            <div class="image-item">
              <img src="${e.target.result}" alt="معاينة الصورة ${imageNumber}" />
              <button type="button" class="remove-btn" onclick="removePreviewImage(${imageNumber})">
                <i class="fas fa-times"></i>
              </button>
            </div>
          `;
        };
        
        reader.readAsDataURL(input.files[0]);
      }
    }

    // Remove preview image
    function removePreviewImage(imageNumber) {
      const input = document.getElementById(`postImages${imageNumber}`);
      const preview = document.getElementById(`preview${imageNumber}`);
      
      input.value = '';
      preview.innerHTML = '';
    }

    // Remove existing image
    function removeExistingImage(imageNumber) {
      const preview = document.getElementById(`preview${imageNumber}`);
      preview.innerHTML = '';
      
      // Add hidden input to mark image for deletion
      const form = document.getElementById('editPostForm');
      const hiddenInput = document.createElement('input');
      hiddenInput.type = 'hidden';
      hiddenInput.name = `removeImage${imageNumber}`;
      hiddenInput.value = 'true';
      form.appendChild(hiddenInput);
    }

    // Form submission with loading state
    document.getElementById('editPostForm').addEventListener('submit', function(e) {
      const submitBtn = this.querySelector('.btn-primary');
      const btnText = submitBtn.querySelector('.btn-text');
      const spinner = submitBtn.querySelector('.loading-spinner');
      
      // Show loading state
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      spinner.style.display = 'inline-block';
      
      // Show success message after a delay (simulating processing)
      setTimeout(() => {
        Swal.fire({
          icon: 'success',
          title: 'تم التحديث بنجاح!',
          text: 'تم تحديث منشورك بنجاح',
          confirmButtonText: 'موافق',
          confirmButtonColor: '#FF6B35',
          timer: 3000,
          timerProgressBar: true
        });
      }, 1000);
    });

    // Drag and drop functionality
    document.querySelectorAll('.file-input-label').forEach(label => {
      label.addEventListener('dragover', function(e) {
        e.preventDefault();
        this.style.background = '#FF6B35';
        this.style.color = '#ffffff';
      });

      label.addEventListener('dragleave', function(e) {
        e.preventDefault();
        this.style.background = '#fff5f2';
        this.style.color = '#FF6B35';
      });

      label.addEventListener('drop', function(e) {
        e.preventDefault();
        this.style.background = '#fff5f2';
        this.style.color = '#FF6B35';
        
        const files = e.dataTransfer.files;
        if (files.length > 0) {
          const input = this.previousElementSibling;
          input.files = files;
          
          // Trigger change event
          const event = new Event('change', { bubbles: true });
          input.dispatchEvent(event);
        }
      });
    });
  </script>
</body>

<footer style="margin-top: 40px;">
  <%- include('partials/footer') %>
</footer>

</html>

