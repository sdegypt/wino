<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>وظائف العمل عن بعد</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;900&display=swap" rel="stylesheet" />
  <style>
    :root {
      --primary-color: #6c5ce7;
      --primary-dark: #5649c0;
      --secondary-color: #8e7bff;
      --background-color: #f7f9fc;
      --text-color: #2d3748;
      --text-light: #64748b;
      --button-color: #6c5ce7;
      --button-hover-color: #5a47d3;
      --border-color: #e2e8f0;
      --shadow-color: rgba(108, 92, 231, 0.15);
      --success-color: #2ECC71;
      --error-color: #E74C3C;
      --warning-color: #F39C12;
      --card-bg: #FFFFFF;
      --accent-color: #ff7675;
      --transition: 0.3s ease;
      --border-radius: 12px;
      --box-shadow: 0 4px 20px rgba(108, 92, 231, 0.15);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Tajawal", sans-serif;
    }

    body {
      background-color: var(--background-color);
      color: var(--text-color);
      line-height: 1.6;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
      flex: 1;
    }

    .page-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: var(--primary-color);
      margin-bottom: 1rem;
      font-weight: 900;
    }

    .page-header p {
      font-size: 1.1rem;
      color: var(--text-light);
      max-width: 700px;
      margin: 0 auto;
    }

    .job-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
      width: 100%;
    }

    .job-card {
      background: var(--card-bg);
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      transition: all var(--transition);
      border: 1px solid var(--border-color);
      position: relative;
      overflow: hidden;
    }

    .job-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(108, 92, 231, 0.2);
    }

    .job-card::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 4px;
      height: 0;
      background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
      transition: height var(--transition);
    }

    .job-card:hover::before {
      height: 100%;
    }

    .job-card-header {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 0.5rem;
    }

    .job-icon-container {
      flex-shrink: 0;
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      transition: transform var(--transition);
    }

    .job-card:hover .job-icon-container {
      transform: scale(1.05) rotate(5deg);
    }

    .job-icon-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .job-icon-container i {
      color: #fff;
      font-size: 1.8rem;
    }

    .job-title-wrapper {
      flex: 1;
    }

    .job-details h3 {
      font-size: 1.3rem;
      color: var(--primary-color);
      font-weight: 700;
      margin-bottom: 0.3rem;
    }

    .company-name {
      font-size: 0.9rem;
      color: var(--text-light);
      margin-bottom: 0.5rem;
    }

    .job-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.8rem;
      margin-bottom: 1rem;
    }

    .job-meta span {
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
      font-size: 0.85rem;
      background-color: rgba(108, 92, 231, 0.1);
      color: var(--primary-dark);
      padding: 0.3rem 0.7rem;
      border-radius: 20px;
    }

    .job-meta i {
      font-size: 0.8rem;
    }

    .job-description {
      font-size: 0.95rem;
      color: var(--text-color);
      margin-bottom: 1rem;
      line-height: 1.7;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .job-salary {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
      color: var(--text-color);
    }

    .job-salary i {
      color: var(--success-color);
    }

    .job-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: auto;
    }

    .save-job {
      background: none;
      border: none;
      color: var(--text-light);
      font-size: 1.2rem;
      cursor: pointer;
      transition: color var(--transition);
    }

    .save-job:hover {
      color: var(--accent-color);
    }

    .save-job.saved {
      color: var(--accent-color);
    }

    .apply-btn {
      padding: 0.7rem 1.5rem;
      background: linear-gradient(135deg, var(--button-color), var(--secondary-color));
      color: #fff;
      border-radius: 25px;
      font-size: 1rem;
      font-weight: 700;
      border: none;
      cursor: pointer;
      transition: all var(--transition);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      box-shadow: 0 2px 8px rgba(108, 92, 231, 0.2);
    }

    .apply-btn:hover {
      background: linear-gradient(135deg, var(--button-hover-color), var(--primary-color));
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
    }

    .apply-btn i {
      font-size: 0.9rem;
    }

    /* Modal Styles */
    .hidden-form {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: var(--card-bg);
      border-radius: var(--border-radius);
      padding: 2rem;
      width: 90%;
      max-width: 500px;
      z-index: 1000;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
      animation: modalFadeIn 0.3s ease;
    }

    @keyframes modalFadeIn {
      from {
        opacity: 0;
        transform: translate(-50%, -40%);
      }
      to {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
    }

    .hidden-form.active {
      display: block;
    }

    .modal-backdrop {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(5px);
      z-index: 999;
      transition: opacity 0.3s ease;
    }

    .modal-backdrop.active {
      display: block;
      animation: backdropFadeIn 0.3s ease;
    }

    @keyframes backdropFadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .close-modal {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: none;
      border: none;
      font-size: 1.5rem;
      color: var(--text-light);
      cursor: pointer;
      transition: color var(--transition);
    }

    .close-modal:hover {
      color: var(--accent-color);
    }

    .hidden-form h3 {
      font-size: 1.5rem;
      color: var(--primary-color);
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--text-color);
    }

    .hidden-form textarea {
      width: 100%;
      padding: 1rem;
      margin-bottom: 1rem;
      border: 1px solid var(--border-color);
      border-radius: 10px;
      font-size: 1rem;
      resize: vertical;
      min-height: 150px;
      background: #f9f9f9;
      transition: all var(--transition);
    }

    .hidden-form textarea:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 8px var(--shadow-color);
      outline: none;
      background: #fff;
    }

    .hidden-form button[type="submit"] {
      width: 100%;
      padding: 1rem;
      background: linear-gradient(135deg, var(--button-color), var(--secondary-color));
      border: none;
      border-radius: 25px;
      font-size: 1rem;
      font-weight: 700;
      color: #fff;
      cursor: pointer;
      transition: all var(--transition);
    }

    .hidden-form button[type="submit"]:hover {
      background: linear-gradient(135deg, var(--button-hover-color), var(--primary-color));
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
    }

    .message-success,
    .message-error {
      text-align: center;
      font-weight: 700;
      margin: 1rem 0;
      padding: 1rem;
      border-radius: var(--border-radius);
    }

    .message-success {
      background-color: rgba(46, 204, 113, 0.1);
      color: var(--success-color);
      border: 1px solid rgba(46, 204, 113, 0.3);
    }

    .message-error {
      background-color: rgba(231, 76, 60, 0.1);
      color: var(--error-color);
      border: 1px solid rgba(231, 76, 60, 0.3);
    }

    .no-jobs {
      text-align: center;
      grid-column: 1 / -1;
      padding: 3rem;
      background: var(--card-bg);
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
    }

    .no-jobs i {
      font-size: 3rem;
      color: var(--primary-color);
      margin-bottom: 1rem;
    }

    .no-jobs h3 {
      font-size: 1.5rem;
      color: var(--text-color);
      margin-bottom: 0.5rem;
    }

    .no-jobs p {
      color: var(--text-light);
      font-size: 1.1rem;
    }

    /* Responsive Styles */
    @media (max-width: 1200px) {
      .container {
        padding: 2rem;
      }
    }

    @media (max-width: 992px) {
      .job-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      }
      
      .page-header h1 {
        font-size: 2.2rem;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 1.5rem;
      }
      
      .page-header h1 {
        font-size: 2rem;
      }
      
      .page-header p {
        font-size: 1rem;
      }
      
      .job-card {
        padding: 1.2rem;
      }
      
      .job-icon-container {
        width: 50px;
        height: 50px;
      }
      
      .job-details h3 {
        font-size: 1.2rem;
      }
      
      .job-meta span {
        font-size: 0.8rem;
        padding: 0.2rem 0.6rem;
      }
    }

    @media (max-width: 576px) {
      .container {
        padding: 1rem;
      }
      
      .job-grid {
        grid-template-columns: 1fr;
      }
      
      .page-header h1 {
        font-size: 1.8rem;
        margin-bottom: 0.8rem;
      }
      
      .hidden-form {
        padding: 1.5rem;
      }
      
      .hidden-form h3 {
        font-size: 1.3rem;
        margin-bottom: 1.2rem;
      }
      
      .apply-btn {
        padding: 0.6rem 1.2rem;
        font-size: 0.95rem;
      }
    }

    /* Loading Animation */
    .loading-spinner {
      display: none;
      width: 24px;
      height: 24px;
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: #fff;
      animation: spin 1s ease-in-out infinite;
      margin-left: 8px;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

  </style>
</head>
<body>

  <header>
    <%- include('partials/headerhome') %>
    <%- include('partials/headeraction') %>
  </header>

  <!-- رسائل الفلاش المنبثقة -->
  <div id="flash-messages">
    <% if (flash && flash.success && flash.success.length) { %>
      <% flash.success.forEach(function(msg) { %>
        <div class="message-success flash-popup">
          <span><%= msg %></span>
          <button class="close-flash" onclick="this.parentElement.style.display='none';">&times;</button>
        </div>
      <% }) %>
    <% } %>
    <% if (flash && flash.error && flash.error.length) { %>
      <% flash.error.forEach(function(msg) { %>
        <div class="message-error flash-popup">
          <span><%= msg %></span>
          <button class="close-flash" onclick="this.parentElement.style.display='none';">&times;</button>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- مكان إعلان جوجل المنبثق -->
  <div id="google-ad-popup" style="display:none;position:fixed;bottom:30px;right:30px;z-index:9999;background:#fff;border-radius:16px;box-shadow:0 4px 24px rgba(0,0,0,0.18);padding:18px 24px;min-width:320px;max-width:400px;">
    <button onclick="document.getElementById('google-ad-popup').style.display='none'" style="position:absolute;top:8px;left:8px;background:none;border:none;font-size:1.5rem;color:#888;cursor:pointer;">&times;</button>
    <!-- هنا كود إعلان جوجل -->
    <div id="google-ad-content">
      <span style="font-size:1.1rem;color:#6c5ce7;font-weight:700;">إعلان</span>
      <div style="margin-top:8px;"> 
        <!-- مثال إعلان -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-xxxxxxxx"
             data-ad-slot="yyyyyyyy"
             data-ad-format="auto"></ins>
      </div>
    </div>
  </div>

  <script>
    // إظهار إعلان جوجل بعد 5 ثواني من تحميل الصفحة
    window.addEventListener('DOMContentLoaded', function() {
      setTimeout(function() {
        document.getElementById('google-ad-popup').style.display = 'block';
      }, 5000);
    });
  </script>

  <div class="container">
    <div class="page-header">
      <h1>وظائف العمل عن بعد</h1>
      <p>اكتشف أحدث الفرص للعمل من أي مكان في العالم. اختر الوظيفة التي تناسب مهاراتك وتقدم بطلبك الآن.</p>
    </div>

    <div class="job-grid">
      <% if (!jobs || jobs.length === 0) { %>
        <div class="no-jobs">
          <i class="fas fa-briefcase"></i>
          <h3>لا توجد وظائف متاحة حاليًا</h3>
          <p>يمكنك التحقق لاحقًا أو متابعتنا لتصلك أحدث الوظائف</p>
        </div>
      <% } else { %>
        <% jobs.forEach(function(job) { %>
          <div class="job-card">
            <div class="job-card-header">
              <div class="job-icon-container">
                <% if (job.logo) { %>
                  <img src="<%= getCloudinaryImageUrl(job.logo, '/uploads/images/pngwing.com.png') %>" alt="<%= job.title %> Logo" 
                       onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                  <i class="fas fa-briefcase" style="display: none;"></i>
                <% } else { %>
                  <i class="fas fa-briefcase"></i>
                <% } %>
              </div>
              <div class="job-title-wrapper">
                <h3><%= job.title %></h3>
                <% if (job.company_name) { %>
                  <p class="company-name"><%= job.company_name %></p>
                <% } %>
              </div>
            </div>

            <div class="job-meta">
              <span><i class="fas fa-clock"></i> <%= job.job_type %></span>
              <span><i class="fas fa-map-marker-alt"></i> <%= job.location %></span>
              <% if (job.is_remote) { %>
                <span><i class="fas fa-globe"></i> عن بُعد</span>
              <% } %>
            </div>

            <p class="job-description"><%= job.description %></p>

            <div class="job-salary">
              <i class="fas fa-money-bill-wave"></i>
              <% if (job.salary_after_interview == 1) { %>
                <span>الراتب بعد المقابلة</span>
              <% } else if (job.salary_min && job.salary_max) { %>
                <span><%= job.salary_min %> - <%= job.salary_max %> <%= job.currency || '' %></span>
              <% } else { %>
                <span>الراتب: غير محدد</span>
              <% } %>
            </div>

            <div class="job-actions">
              <button class="save-job" onclick="toggleSaveJob(this, '<%= job.job_id %>')">
                <i class="far fa-bookmark"></i>
              </button>
              <button class="apply-btn" onclick="openModal('<%= job.job_id %>')">
                التقديم <i class="fas fa-paper-plane"></i>
              </button>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <div id="modal-backdrop" class="modal-backdrop"></div>

  <% if (jobs && jobs.length > 0) { %>
    <% jobs.forEach(function(job) { %>
      <div id="modal-<%= job.job_id %>" class="hidden-form">
        <button class="close-modal" onclick="closeModal('<%= job.job_id %>')">×</button>
        <h3>تقديم طلب لوظيفة: <%= job.title %></h3>
        <form id="apply-form-<%= job.job_id %>" onsubmit="submitApplication(event, '<%= job.job_id %>')">
          <input type="hidden" name="job_id" value="<%= job.job_id %>" />
          <div class="form-group">
            <label for="cover-letter-<%= job.job_id %>">رسالة التقديم</label>
            <textarea 
              id="cover-letter-<%= job.job_id %>" 
              name="cover_letter" 
              placeholder="أخبرنا لماذا أنت المرشح المثالي لهذه الوظيفة..." 
              required></textarea>
          </div>
          <button type="submit">
            إرسال الطلب
            <div class="loading-spinner" id="spinner-<%= job.job_id %>"></div>
          </button>
          <div id="form-message-<%= job.job_id %>" class="form-message"></div>
        </form>
      </div>
    <% }); %>
  <% } %>

  <script>
    // Check if jobs are saved in localStorage
    document.addEventListener('DOMContentLoaded', function() {
      const saveButtons = document.querySelectorAll('.save-job');
      saveButtons.forEach(button => {
        const jobId = button.getAttribute('onclick').match(/'([^']+)'/)[1];
        if (localStorage.getItem(`savedJob_${jobId}`)) {
          button.innerHTML = '<i class="fas fa-bookmark"></i>';
          button.classList.add('saved');
        }
      });
    });

    function toggleSaveJob(button, jobId) {
      if (localStorage.getItem(`savedJob_${jobId}`)) {
        localStorage.removeItem(`savedJob_${jobId}`);
        button.innerHTML = '<i class="far fa-bookmark"></i>';
        button.classList.remove('saved');
        showToast('تم إزالة الوظيفة من المحفوظات', 'info');
      } else {
        localStorage.setItem(`savedJob_${jobId}`, 'true');
        button.innerHTML = '<i class="fas fa-bookmark"></i>';
        button.classList.add('saved');
        showToast('تم حفظ الوظيفة في المحفوظات', 'success');
      }
    }

    function openModal(jobId) {
      const modal = document.getElementById(`modal-${jobId}`);
      if (modal) {
        modal.classList.add("active");
        document.getElementById("modal-backdrop").classList.add("active");
        document.body.style.overflow = "hidden";
      }
    }

    function closeModal(jobId) {
      const modal = document.getElementById(`modal-${jobId}`);
      if (modal) {
        modal.classList.remove("active");
        document.getElementById("modal-backdrop").classList.remove("active");
        document.body.style.overflow = "auto";
      }
    }

    async function submitApplication(event, jobId) {
      event.preventDefault();
      const form = document.getElementById(`apply-form-${jobId}`);
      const formData = new FormData(form);
      const jsonData = Object.fromEntries(formData);
      const messageElement = document.getElementById(`form-message-${jobId}`);
      const spinner = document.getElementById(`spinner-${jobId}`);
      const submitBtn = form.querySelector('button[type="submit"]');

      // Show loading spinner
      submitBtn.disabled = true;
      spinner.style.display = 'block';

      try {
        const response = await fetch("/apply-job", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(jsonData),
          credentials: 'include'
        });
        const result = await response.json();

        if (result.success) {
          messageElement.innerHTML = '<div class="message-success">✅ تم إرسال الطلب بنجاح!</div>';
          form.reset();
          setTimeout(() => {
            closeModal(jobId);
            showToast('تم إرسال طلبك بنجاح', 'success');
          }, 1500);
        } else {
          messageElement.innerHTML = `<div class="message-error">❌ ${result.message || 'فشل في إرسال الطلب'}</div>`;
          showToast(result.message || 'حدث خطأ أثناء الإرسال', 'error');
        }
      } catch (error) {
        console.error("Error:", error);
        messageElement.innerHTML = '<div class="message-error">❌ حدث خطأ أثناء الإرسال. يرجى المحاولة مرة أخرى.</div>';
        showToast('حدث خطأ في الشبكة', 'error');
      } finally {
        submitBtn.disabled = false;
        spinner.style.display = 'none';
      }
    }

    function showToast(message, type) {
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      toast.textContent = message;
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.classList.add('show');
      }, 10);
      
      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => {
          document.body.removeChild(toast);
        }, 300);
      }, 3000);
    }

    // Close modal when clicking on backdrop
    document.getElementById('modal-backdrop').addEventListener('click', function() {
      const activeModal = document.querySelector('.hidden-form.active');
      if (activeModal) {
        const jobId = activeModal.id.split('-')[1];
        closeModal(jobId);
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const activeModal = document.querySelector('.hidden-form.active');
        if (activeModal) {
          const jobId = activeModal.id.split('-')[1];
          closeModal(jobId);
