  <div class="projects-container">
    <!-- بطاقة عرض المشاريع -->
    <div class="project-card">
      <img src="https://cdn-icons-png.flaticon.com/512/619/619032.png" alt="عرض المشاريع" class="project-icon">
      <h2 class="project-title">عرض المشاريع</h2>
