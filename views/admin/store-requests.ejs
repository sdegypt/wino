<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة طلبات المتاجر | لوحة الإدارة</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
            direction: rtl;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .admin-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            text-align: center;
        }

        .admin-header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .filters {
            background: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .filter-buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .filter-btn {
            padding: 10px 20px;
            border: 2px solid #dc3545;
            background: white;
            color: #dc3545;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            font-weight: 600;
        }

        .filter-btn.active,
        .filter-btn:hover {
            background: #dc3545;
            color: white;
        }

        .requests-grid {
            display: grid;
            gap: 20px;
        }

        .request-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .request-card:hover {
            transform: translateY(-5px);
        }

        .request-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .request-info h3 {
            color: #333;
            font-size: 1.5rem;
            margin-bottom: 5px;
        }

        .request-meta {
            color: #666;
            font-size: 0.9rem;
        }

        .request-status {
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-approved {
            background: #d4edda;
            color: #155724;
        }

        .status-rejected {
            background: #f8d7da;
            color: #721c24;
        }

        .request-description {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            color: #333;
            line-height: 1.6;
        }

        .request-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-info {
            background: #17a2b8;
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

        .no-requests {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .no-requests i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.8);
            z-index: 1000;
            padding: 20px;
        }

        .modal-content {
            background: white;
            max-width: 600px;
            margin: 50px auto;
            border-radius: 15px;
            padding: 30px;
            position: relative;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal-close {
            position: absolute;
            top: 15px;
            right: 20px;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #666;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-control:focus {
            outline: none;
            border-color: #dc3545;
        }

        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            
            .request-header {
                flex-direction: column;
                gap: 15px;
            }
            
            .filter-buttons {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <!-- Include Header -->
    <%- include('../partials/headeraction') %>

    <div class="container">
        <!-- Admin Header -->
        <div class="admin-header">
            <h1><i class="fas fa-store"></i> إدارة طلبات المتاجر</h1>
            <p>مراجعة والموافقة على طلبات إنشاء المتاجر الجديدة</p>
        </div>

        <!-- Filters -->
        <div class="filters">
            <div class="filter-buttons">
                <a href="?status=" class="filter-btn <%= !status ? 'active' : '' %>">
                    <i class="fas fa-list"></i>
                    جميع الطلبات
                </a>
                <a href="?status=pending" class="filter-btn <%= status === 'pending' ? 'active' : '' %>">
                    <i class="fas fa-clock"></i>
                    طلبات معلقة
                </a>
                <a href="?status=approved" class="filter-btn <%= status === 'approved' ? 'active' : '' %>">
                    <i class="fas fa-check"></i>
                    طلبات مقبولة
                </a>
                <a href="?status=rejected" class="filter-btn <%= status === 'rejected' ? 'active' : '' %>">
                    <i class="fas fa-times"></i>
                    طلبات مرفوضة
                </a>
            </div>
        </div>

        <!-- Requests Grid -->
        <% if (requests && requests.length > 0) { %>
            <div class="requests-grid">
                <% requests.forEach(request => { %>
                    <div class="request-card">
                        <div class="request-header">
                            <div class="request-info" style="display: flex; align-items: center; gap: 18px;">
                                <img src="/uploads/avatars/<%= request.user_avatar || 'default-avatar.png' %>" alt="avatar" style="width:48px;height:48px;border-radius:50%;object-fit:cover;border:2px solid #eee;box-shadow:0 2px 8px #eee;">
                                <div>
                                    <h3 style="margin-bottom:2px;"><%= request.store_name %></h3>
                                    <div class="request-meta">
                                        <i class="fas fa-user"></i>
                                        <strong><%= request.user_name %></strong> (<%= request.user_email %>)<br>
                                        <span style="font-size:0.95em;color:#888;">
                                            <i class="fas fa-globe"></i> <%= request.user_country || '-' %> &nbsp;
                                            <i class="fas fa-briefcase"></i> <%= request.user_occupation || '-' %> &nbsp;
                                            <i class="fas fa-phone"></i> <%= request.user_phone || '-' %>
                                        </span><br>
                                        <i class="fas fa-calendar"></i>
                                        <%= new Date(request.created_at).toLocaleDateString('ar-EG') %> <%= new Date(request.created_at).toLocaleTimeString('ar-EG') %>
                                    </div>
                                </div>
                            </div>
                            <div class="request-status status-<%= request.status %>">
                                <% if (request.status === 'pending') { %>
                                    <i class="fas fa-clock"></i> معلق
                                <% } else if (request.status === 'approved') { %>
                                    <i class="fas fa-check"></i> مقبول
                                <% } else if (request.status === 'rejected') { %>
                                    <i class="fas fa-times"></i> مرفوض
                                <% } %>
                            </div>
                        </div>

                        <div class="request-description">
                            <strong>وصف المتجر:</strong><br>
                            <%= request.store_description %>
                        </div>

                        <% if (request.admin_notes) { %>
                            <div class="request-description" style="background: #e9ecef;">
                                <strong>ملاحظات الإدارة:</strong><br>
                                <%= request.admin_notes %>
                            </div>
                        <% } %>

                        <% if (request.processed_at) { %>
                            <div class="request-meta" style="margin-bottom: 15px;">
                                <i class="fas fa-clock"></i>
                                تمت المعالجة في: <%= new Date(request.processed_at).toLocaleDateString('ar-EG') %>
                                <%= new Date(request.processed_at).toLocaleTimeString('ar-EG') %>
                            </div>
                        <% } %>

                        <div class="request-actions">
                            <% if (request.status === 'pending') { %>
                                <button class="btn btn-success" onclick="processRequest(<%= request.id %>, 'approve')">
                                    <i class="fas fa-check"></i>
                                    موافقة
                                </button>
                                <button class="btn btn-danger" onclick="processRequest(<%= request.id %>, 'reject')">
                                    <i class="fas fa-times"></i>
                                    رفض
                                </button>
                            <% } %>
                            <a href="/profile/<%= request.user_id %>" class="btn btn-info" target="_blank">
                                <i class="fas fa-user"></i>
                                عرض الملف الشخصي
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="no-requests">
                <i class="fas fa-inbox"></i>
                <h3>لا توجد طلبات</h3>
                <p>لا توجد طلبات متاجر بالمعايير المحددة</p>
            </div>
        <% } %>
    </div>

    <!-- Process Request Modal -->
    <div class="modal" id="processModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal()">
                <i class="fas fa-times"></i>
            </button>
            <h2 id="modalTitle">معالجة الطلب</h2>
            
            <form id="processForm">
                <input type="hidden" id="requestId" name="requestId">
                <input type="hidden" id="action" name="action">
                
                <div class="form-group">
                    <label class="form-label">ملاحظات الإدارة (اختياري)</label>
                    <textarea class="form-control" name="adminNotes" rows="4" placeholder="أضف ملاحظات للمستخدم..."></textarea>
                </div>
                
                <div style="display: flex; gap: 15px; margin-top: 25px;">
                    <button type="submit" class="btn" id="confirmBtn" style="flex: 1;">
                        تأكيد
                    </button>
                    <button type="button" class="btn" style="background: #6c757d; color: white; flex: 1;" onclick="closeModal()">
                        إلغاء
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function processRequest(requestId, action) {
            const modal = document.getElementById('processModal');
            const modalTitle = document.getElementById('modalTitle');
            const confirmBtn = document.getElementById('confirmBtn');
            
            document.getElementById('requestId').value = requestId;
            document.getElementById('action').value = action;
            
            if (action === 'approve') {
                modalTitle.textContent = 'الموافقة على الطلب';
                confirmBtn.textContent = 'موافقة';
                confirmBtn.className = 'btn btn-success';
                confirmBtn.style.flex = '1';
            } else {
                modalTitle.textContent = 'رفض الطلب';
                confirmBtn.textContent = 'رفض';
                confirmBtn.className = 'btn btn-danger';
                confirmBtn.style.flex = '1';
            }
            
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('processModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        document.getElementById('processForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const requestId = formData.get('requestId');
            const action = formData.get('action');
            const adminNotes = formData.get('adminNotes');
            
            const submitButton = document.getElementById('confirmBtn');
            const originalText = submitButton.textContent;
            
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جارٍ المعالجة...';
            submitButton.disabled = true;
            
            try {
                const response = await fetch(`/stores/admin/requests/${requestId}/process`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: action,
                        adminNotes: adminNotes
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('خطأ: ' + result.message);
                    submitButton.textContent = originalText;
                    submitButton.disabled = false;
                }
            } catch (error) {
                alert('حدث خطأ في الشبكة');
                submitButton.textContent = originalText;
                submitButton.disabled = false;
            }
        });

        // Close modal when clicking outside
        document.getElementById('processModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>

